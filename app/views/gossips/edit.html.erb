<div class="page content col-7 ">
<h2>Edite ton nouveau gossip:</h2><br>
  <%= form_for @gossips do |form|%>
  
    <div class="form-group">
    <label> Titre </label>
    <%= form.text_field :title, class: "form-control" %>
    <br><br>

    <label> Contenu </label>
    <%= form.text_area :content, rows: 6, class: "form-control" %>
    <br><br>

    <%= submit_tag "modifie ton gossip", class: 'btn btn-outline-warning btn-sm' %>
  <% end %>
</div>