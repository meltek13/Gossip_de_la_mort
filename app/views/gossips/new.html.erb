<div class="connexion">


<%= form_tag url_for(action: 'create'), method: "post" do %>
<h3 class="mt-5">Poste un potin crousty cheesy</h3>
<br/><br/><br/>
  <div class="form-group">
    <%= label_tag 'Title', name = '', class: 'font-weight-bold'%>
    <%= text_field_tag 'title', nil, placeholder: 'Ecrit ton titre...', class: 'form-control'%>
  </div>

  <div class="form-group">
        <%= label_tag 'Content', name = '' , class: 'font-weight-bold'%>
        <%= text_area_tag 'content', nil, rows: 6, placeholder: 'Ecrit ton gossip...', class: 'form-control', style:'width:500px;'%>
  </div>
  <br>

  <%= submit_tag "Gossip", class: 'btn btn-primary' %>

<% end %>

</div>
