
<div class = inscription>



<% if @users.errors.any? %>
<div class="alert alert-danger text-center" role="alert">
  <p>Nous n'avons pas réussi à créer votre compte pour la (ou les) raison(s) suivante(s) :</p>
  <ul>
    <% @users.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
  <%= form_tag url_for(action: 'create'), method: "post" do %>
  <br/><br/>
  <h3>INSCRIPTION</h3>
  <br/>

    <%= label_tag 'First_name', name="" %>
    <%= text_field_tag 'first_name',nil , placeholder: "Prenom" %>

    <br /> <br />

    <%= label_tag 'Last_name', name="" %>
    <%= text_field_tag 'last_name',nil , placeholder: "Nom" %>

    <br /> <br />

    <%= label_tag 'Age', name="" %>
    <%= text_field_tag 'age',nil , placeholder: "Age" %>

    <br /> <br />
    
    <%= label_tag 'Email', name="" %>
    <%= text_field_tag 'email',nil , placeholder: "E-mail" %>

    <br /> <br />

    <%= label_tag 'Password', name="" %>
    <%= text_field_tag 'password',nil , placeholder: "Password" %>

    <br /> <br />

   <div class="form-group">
    <%= label_tag 'City' %>
    <%= select_tag 'city', options_from_collection_for_select(City.all, "id", "name", @users.city)%>
   </div>

    


    <%= label_tag 'description', name="" %>
    <%= text_area_tag 'description',nil , placeholder: "Description"%>
    <br /> <br />

    <%= submit_tag "S'INCRIRE", class: "btn btn-warning"%>
  <% end %>
  </div>

 

  
